<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity"
    android:textAlignment="viewStart"
    android:touchscreenBlocksFocus="true"
    android:background="@drawable/login_background">

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Kerberos"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/passwordField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Password"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword"
        android:layout_above="@+id/signUpText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don&apos;t Have An Account? Sign up!"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:layout_marginTop="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@mit.edu"
        android:id="@+id/textView"
        android:textSize="22dp"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/usernameField"
        android:layout_alignRight="@+id/passwordField"
        android:layout_alignEnd="@+id/passwordField" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome To PSET Connect"
        android:id="@+id/psetConnectTextView"
        android:elegantTextHeight="false"
        android:textSize="25dp"
        android:layout_marginBottom="97dp"
        android:fontFamily="sans-serif-light"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/passwordField"
        android:layout_alignEnd="@+id/passwordField"
        android:gravity="center_vertical|center_horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/psetConnectTextView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/loginButton"

        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="28sp"

        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/login_button_selector"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:paddingTop="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordField" />

</RelativeLayout>
